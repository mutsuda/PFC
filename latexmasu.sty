% Changes font style into a "codi" one
\newcommand{\codi}[1]{\small\texttt{{#1}}}

% Transforms urls into clickable links
\newcommand{\posaurl}[1]{\href{#1}{#1}}

% Places graph
\newcommand{\grafic}[2]
{
\begin{figure}[ht!!]
  \caption{{#2}}\label{fig:{#1}}
    \begin{center}
      \input{#1}
    \end{center}
\end{figure}  

}

% Places big image
\newcommand{\imatge}[2]
{
  \begin{figure}[ht!!]
    \caption{{#2}}\label{fig:{#1}}
    \begin{center}
      \includegraphics[width=120mm]{{#1}}
    \end{center}
  \end{figure}
}

% Places small image 
\newcommand{\imatgePetita}[2]
{
  \begin{figure}[ht!!]
    \caption{{#2}}\label{fig:{#1}}
    \begin{center}
      \includegraphics[width=70mm]{{#1}}
    \end{center}
  \end{figure}
}

% Generates a bibligoraphy line for urls
\newcommand{\biburl}[6]{\bibitem{#1} #2, "#3", \textit{#4}, #5, \posaurl{#6}}

% Generates a bibliography line for books
\newcommand{\bibook}[4]{ \bibitem{#1} #2, \textit{#3}, #4 }


% Thesis specific command
